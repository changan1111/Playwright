function extractWord(input: string, pattern: string): string | null {
    // Regular expression pattern to match the desired format
    const regex = new RegExp(`(?:${pattern})\\s+([\\w\\s]+)`, 'i');
    const match = input.match(regex);

    // Check if a match is found and return the extracted word
    if (match && match[1]) {
        return match[1].trim();
    }

    // Return null if no match is found
    return null;
}
